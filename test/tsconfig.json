{
  "compilerOptions": {
    "target": "ES2020",          // Target ES version
    "module": "CommonJS",       // Use CommonJS modules for Node.js
    "strict": true,             // Enable strict type-checking options
    "esModuleInterop": true,    // Allow default imports from modules with no default export
    "skipLibCheck": true,       // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  // "include": ["src/**/*.ts"],   // Only include .ts files in the src directory
  "exclude": ["node_modules"]  // Exclude the node_modules directory
}
